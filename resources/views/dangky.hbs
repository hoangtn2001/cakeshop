				<select id="sex" name="sex" class="select">		
				<option value="0">Nam</option>
				<option value="1">Nữ</option>
				</select>
				</div>
			<div class="form-group">
                <label for="Email" class="col-sm-4 control-label">Address</label>
                <div class="col-sm-8">
