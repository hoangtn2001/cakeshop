	<h2 style="color: red;">{{message}}</h2>
	<form action="/login/register" method="post" class='signform form' id="form-1">
			 <div class="form-group">
                <label for="Email" class="col-sm-4 control-label form-label">Email</label>
                <div class="col-sm-8">
                    <input id="email" name="email"  class="form-control1 form-control ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required"  ng-required="true" required="required" >
