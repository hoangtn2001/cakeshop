                <label  class="col-sm-4 control-label form-label">Tên bánh</label>
                <div class="col-sm-8">
                    <input id="name" name="name"  class="form-control1 form-control ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required"  >
					<span class="form-message"></span>
                </div>
            </div>
            <div class="form-group">
                <label  class="col-sm-4 control-label form-label">Mô tả sản phẩm</label>
                <div class="col-sm-8">
                    <input id="mota" name="mota"  class="form-control1 form-control ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required"  >
					<span class="form-message"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label form-label">Giá bánh</label>
                <div class="col-sm-8">
                    <input id="gia" name="gia" type="number" onchange="formatCash()"  class="form-control1 form-control ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required" >
					<span class="form-message"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label form-label">Số lượng</label>
                <div class="col-sm-8">
                    <input id="soluong" name="soluong" type="number" class="form-control1 form-control ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required" >
					<span class="form-message"></span>
                </div>
            </div>
            <div class="form-group">
					<label for="Email" class="col-sm-4 form-label">Danh mục</label>
				<select id="danhmuc" name="danhmuc" class="select">	
                    {{#each result}}	
				<option value="{{this.Id_category}}">{{this.Name_category}}</option>
                {{/each}}
				</select>
				</div>
                
                <div class="form-group">
					<label for="Email" class="col-sm-4 form-label">Sản phẩm nổi bật</label>
				<select id="noibat" name="noibat" class="select">		
				<option value="0">Không</option>
				<option value="1">Nổi bật</option>
				</select>
				</div>
       
    <script>
    function formatCash() {
    return document.getElementById("gia").value =  `${document.getElementById("gia").value}000`.replace(/\B(?=(\d{3})+(?!\d))/g, '.'); 
    }
</script>
    <button type="submit" class="nutnhan">Thêm sản phẩm</button>	        
